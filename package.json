{
  "name": "@scrowl/root",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "nohoist": [
    "**/electron",
    "**/electron/**",
    "**/jest",
    "**/jest/**"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start:course": "yarn workspace @scrowl/courseauthoring run start",
    "build:course": "yarn workspace @scrowl/courseauthoring run build",
    "package:course": "yarn workspace @scrowl/courseauthoring run package",
    "test:course": "yarn workspace @scrowl/courseauthoring run test",
    "test:unit:course": "yarn workspace @scrowl/courseauthoring run test:unit",
    "test:e2e:course": "yarn workspace @scrowl/courseauthoring run test:e2e",
    "coverage:course": "yarn workspace @scrowl/courseauthoring run test:coverage",
    "lint:check:course": "yarn workspace @scrowl/courseauthoring run lint:check",
    "lint:fix:course": "yarn workspace @scrowl/courseauthoring run lint:fix",
    "move:apps": "node ./scripts/pipeline/cmd.move-apps.js",
    "start:downloads": "concurrently \"yarn workspace @scrowl/appdownloads run start\" \"wait-on http://localhost:1234 && yarn run move:apps\"",
    "build:downloads": "yarn workspace @scrowl/appdownloads run build",
    "deploy": "yarn run package:course && yarn run build:downloads",
    "start:player": "yarn workspace @scrowl/player run start",
    "build:player": "yarn workspace @scrowl/player run build",
    "build:runtime": "yarn workspace @scrowl/runtime run build",
    "postinstall": "yarn build:runtime && yarn build:player"
  },
  "devDependencies": {
    "chalk": "^5.0.1",
    "concurrently": "^7.1.0",
    "eslint": "^8.13.0",
    "fs-extra": "^10.0.1",
    "prettier": "^2.6.2",
    "process": "^0.11.10",
    "@scrowl/eslint-config": "^1.0.0",
    "stylelint": "^14.7.1",
    "wait-on": "^6.0.1"
  },
  "packageManager": "yarn@1.22.17"
}
