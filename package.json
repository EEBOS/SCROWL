{
  "name": "mono-scrowl",
  "homepage": "https://eebos.github.io/scrowl-downloads",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "nohoist": [
    "**/electron",
    "**/electron/**",
    "**/jest",
    "**/jest/**"
  ],
  "scripts": {
    "build": "turbo run build",
    "deploy-gh": "turbo run deploy-gh",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "stylelint": "^14.5.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "turbo": "*",
    "gh-pages": "^3.2.3"
  }
}
